<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:elevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/playlistlayout"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewhinh"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:elevation="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/plimages"
                android:src="@drawable/playlist"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tenplaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/cardviewhinh"
            android:ellipsize="end"
            android:lines="1"
            android:maxWidth="220dp"
            android:text="Tên playlist"
            android:textColor="#020202"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtdatecreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tenplaylist"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/cardviewhinh"
            android:ellipsize="end"
            android:lines="1"
            android:maxWidth="220dp"
            android:text="ngày lập"
            android:textColor="#606060"
            android:textSize="16sp"
            android:textStyle="italic" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>